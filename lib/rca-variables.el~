(setq default-font "mononoki Nerd Font Mono:style=Regular")
(setq history-excluded-filetypes '(".*gz"
				   ".*pdf"
				   "bookmarks"
				   ".*log"
				   ".*png"
				   ".*jpg"
				   ".*gif"
				   ".*_db"))
(setq temporal-directory
      (concat user-emacs-directory "temporal/"))
(setq backup-directory
      (concat temporal-directory "saves"))
(setq recentf-directory
      (concat temporal-directory "recentf"))
(setq config-files-dirs '("" "mod" "ext" "lib"))
;;(setq config-files(
;;      (directory-files-recursively user-emacs-directory "^rca.*el$"))
setq banner-images
      (directory-files (concat user-emacs-directory "img/") t ".*g$"))
(setq config-files
      (append
       (directory-files user-emacs-directory nil ".*el$")
       (directory-files (concat user-emacs-directory "mod/") nil "^[^.].*el$")
       (directory-files (concat user-emacs-directory "ext/") nil "^[^.].*el$")
       (directory-files (concat user-emacs-directory "lib/") nil "^[^.].*el$")))

(setq config-files (let ((config-files-unit (directory-files user-emacs-directory nil "^[^.].*el$")))
		     (while config-files-unit
		       (message (car config-files-unit))
		       (setq config-files-unit (cdr config-files-unit)))))

